@model IEnumerable<WardrobeApp_AH.Models.Bottom>

@{
    ViewBag.Title = "Index";
}

<h2>Dobby likes Pants </h2>

@foreach (var item in Model)
{
    <div class="thumbnail">
        
           <img src=" @Html.DisplayFor(modelItem => item.BottomPhoto)" class="img-rounded" />
        
           <p> @Html.DisplayFor(modelItem => item.BottomName)</p>
        
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BottomID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BottomID })
        </p>
    </div>
}



